<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Validation</title>
    <style>
        input {
            width: 100%;
            background: transparent;
            border: none;
            outline: none;
            font-size: 16px;
            padding: 10px; /* Improves usability */
        }

        .box {
            border: 2px solid #ccc; /* Default border */
            padding: 10px;
            border-radius: 4px;
            transition: border-color 0.3s ease; /* Smooth color change */
        }

        .field:has(input:invalid:not(:placeholder-shown)) .box {
            border-color: red;
        }

        .field:has(input:invalid:not(:placeholder-shown)) .error {
            display: block;
            color: red;
            font-size: 14px;
            margin-top: 5px;
        }
    .field:has(input:valid:not(:placeholder-shown)) .box {
            border-color: rgb(28, 243, 0);
        }

        .field:has(input:valid:not(:placeholder-shown)) .success {
            display: block;
            color: rgb(28, 243, 0);
            font-size: 14px;
            margin-top: 5px;
        }

        .error, .success {
            display: none;
        }
    </style>
</head>
<body>
    <form novalidate>
        <div class="field">
            <div class="box">
                <input type="email" required placeholder="Email Address">
            </div>
            <p class="error">Invalid Email</p>
            <p class="success">Valid</p>
        </div>
